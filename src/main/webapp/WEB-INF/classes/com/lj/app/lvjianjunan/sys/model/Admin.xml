<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="admin">
<typeAlias alias="admin" type="com.lj.app.lvjianjunan.sys.model.Admin" />

	<resultMap id="adminResult" class="admin">       
	 	<result property="adminId" column="adminId"/>      
	   <result property="userName" column="userName"/>     
       <result property="userPass" column="userPass"/>      
   </resultMap>
   
	<select id="select" resultMap="adminResult">
		SELECT adminId, userName ,  userPass FROM ADMIN 
	</select>
	
	<select id="getInfoByKey" parameterClass="int"  resultClass="admin">
			SELECT adminId, userName ,  userPass FROM ADMIN  WHERE adminId=#adminId#
	</select>
	
	<select id="dynamicQuery" parameterClass="admin" resultClass="admin">
		<![CDATA[ 
				SELECT adminId, userName ,  userPass FROM ADMIN 
		]]>  
		<dynamic prepend="WHERE">
			<isNotEmpty property="userName">
				userName = #userName:VARCHAR#
			</isNotEmpty>
			<isNotEmpty property="userPass">
				userPass = #userPass:VARCHAR#
			</isNotEmpty>
		</dynamic>
	</select>

	<delete id="deleteAdminById" parameterClass="int">
		DELETE FROM  ADMIN where adminId=#adminId#
	</delete>
	
	<insert id="insert">
	insert into admin(userName,userPass)
			 values (#userName#,#userPass#)
	</insert> 

</sqlMap>